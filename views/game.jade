extends layout

block content
    // BOARD
    #board
      // BOARD LEFT
      #board-left
        .avatarContainer
          p.player-name Player 2
          .avatar-box
            p.player-health
            img

          .resource-box
            p
        .button-container
          button
            | End Turn
        .avatarContainer
          p.player-name= player.login
          .avatar-box
            p.player-health
            img(src= player.avatar)
          .resource-box
            p
      // BOARD RIGHT
      #board-right
        .container.table
          // TOP (opponent hand)
          .top-row
            .hand
            .menu-bar
              span Menu
          // MIDDLE (played cards + decks)
          .middle-row
            .cards-row
              .card-box
              .card-box
              .card-box
              .card-box
              .card-box
              .deck-container
                .deck-box
                  p Discarded Pile
                .deck-box#opponent-deck
                  p Deck Pile
            .cards-row
              .card-box
              .card-box
              .card-box
              .card-box
              .card-box
              .deck-container
                .deck-box
                  p Discarded Pile
                .deck-box#player-deck
                  p Deck Pile
          // BOTTOM (player hand)
          .bottom-row
            #hand
            #info-container
              h3 Nom de la carte
              p

          // end table
        // end board-right
      #disconnectionContainer
        div
          div
            p Votre adversaire s'est déconnecté !
            p Cette partie sera comptée comme une victoire!
            a(href="/home").button.dark-grey Revenir à l'écran principal
      // end board
